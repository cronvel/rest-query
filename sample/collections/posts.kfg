path: /posts
extraProperties: true
properties:
	title:
		type: string
	content:
		type: string
	date:
		type: date
		sanitize: toDate
		optional: true
	likes:
		type: integer
		sanitize: toInteger
		optional: true
	emotes:
		type: array
		of:
			type: string
		optional: true
slugGenerationProperty: title
unindexedQueries: true
indexes:
	-	properties:
			content: text
	-	properties:
			title: 1
	-	properties:
			date: 1

